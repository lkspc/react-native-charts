{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "./lib",
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-native",
    "declaration": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
